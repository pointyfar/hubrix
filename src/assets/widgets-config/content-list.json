{
  "modelJson" : {
    "pagesize": 5,
    "sections": ["posts"],
    "display": "summary"
  },
  "jsonFields": [
    {
      "key": "pagesize",
      "type": "input",
      "templateOptions": {
        "type": "number",
        "label": "How many pages to display before paginating?",
        "required": true
      }
    },
    {
      "key": "sections",
      "type": "array",
      "fieldArray": {
        "fieldGroupClassName": "row",
        "templateOptions": {
          "label": "Add sections to include (on homepage)"
        },
        "fieldGroup": [
          {
            "type": "input",
            "key": "section",
            "templateOptions": {
              "label": "Name of Section:",
              "required": true
            }
          }
        ]
      }
    },
    {
      "key" : "display",
      "type": "select",
      "templateOptions": {
        "label": "What to display",
        "options": [
          {"label":"Summary", "value":"summary"},
          {"label":"Content", "value":"content"}
        ]
      }
    },
    {
      "key": "title",
      "type": "checkbox",
      "templateOptions": {
        "label": "Show title"
      },
      "validation": {
        "messages": {
          "pattern": "(error, field: FormlyFieldConfig) => `${field.formControl.value} is not a valid IP Address`"
        }
      }
    },
    {
      "key": "author",
      "type": "checkbox",
      "templateOptions": {
        "label": "Show author"
      }
    },
    {
      "key": "date",
      "type": "checkbox",
      "templateOptions": {
        "label": "Show date published"
      }
    }
  ]
}